{% extends "@pages/_base-page.twig" %}

{% block content %}
    <div class="contents--wrapper">
        <div class="content-area">
            <div class="column-wrapper">
                <div class="column-large-8 column-medium-8 column-small-12 column-xsmall-12">
                    {% include "@molecules/01-text/00-section-header.twig" with {
                        "title" : title
                    } %}
                    {% include "@molecules/01-text/01-section-intro.twig" with {
                        "intro_text" : intro_text
                    } %}

                </div>
            </div>
        </div>
        <div class="impact-stories-wrapper">
            {% for item in impact_section %}
                {% include "@organisms/01-content-blocks/05-impact-stories-pillar.twig" with {
                    "color" : item.color,
                    "hero_image" : item.hero_image,
                    "story_title" : item.story_title,
                    "copy_text" : item.copy_text,
                    "link" : item.link,
                    "stats" : item.stats,
                    "story" : item.story
                } %}
            {% endfor %}
        </div>


        {% include "@organisms/01-content-blocks/06-impact-stories-grid.twig" with {
            "items" : impact_stories_grid
        } %}

        {% include "@molecules/02-blocks/07-give-block-full-width.twig" with {
            "items" : impact_stories_grid
        } %}
    </div>
{% endblock %}
