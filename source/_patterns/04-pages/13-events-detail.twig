{% extends "@pages/_article-base-template.twig" %}

{% block top_section %}
    <div class="content-area">
        <div class="column-wrapper">
            <div class="column-large-12 column-medium-12 column-small-12 column-xsmall-12">
                {% block breadcrumbs %}
                    {% include "@molecules/05-navigation/03-breadcrumb.twig" %}
                {% endblock %}
            </div>
            <div class="column-large-8 column-medium-8 column-small-12 column-xsmall-12">
                {% block title %}
                    {% include "@molecules/01-text/08-event-section-header.twig" with {
                        "title" : story_title
                    } %}
                {% endblock %}
                {% include "@molecules/01-text/01-section-intro.twig" with {
                        "intro_text" : intro_text
                } %}
            </div>
        </div>
    </div>
    {% block hero_image %}
        {% include "@molecules/02-blocks/08-article-hero-no-text.twig" %}
    {% endblock %}
    <div class="photo--caption-full large--hidden medium--hidden">
        <div class="content-area">
            <div class="column-wrapper xsmall--visible">
                {% block hero_image_caption %}
                    {% include "@molecules/01-text/02-photo-caption.twig" %}
                {% endblock %}
            </div>
             <div class="column-wrapper small--visible">
                <div class="column-small-12">
                    {% block hero_image_caption_small %}
                        {% include "@molecules/01-text/02-photo-caption.twig" %}
                    {% endblock %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block left_section %}
 <div class="column-large-12 column-medium-12 column-small-12 column-xsmall-12">
    <div class="column-wrapper">
        <div class="column-large-10 column-medium-12 column-small-12 column-xsmall-12">
            {% include '@molecules/02-blocks/23-next-event-block.twig' with {
                "content" : next_event_content
            } %}
            {% include '@organisms/01-content-blocks/18-past-events.twig' with {
                "content" : past_events_content,
                "event_images" : event_images
            } %}
        </div>
        <div class="column-large-10 column-medium-12 column-small-12 column-xsmall-12">

        </div>
    </div>
 </div>
{% endblock %}

{% block right_section %}
    <div class="column-large-12 column-medium-12 small--hidden xsmall--hidden photo--caption-side">
        {{ block('hero_image_caption') }}
    </div>
    {% block right_sidebar %}
    <div class="column-large-12 column-medium-12 column-small-12 column-xsmall-12">
        {% include "@molecules/02-blocks/05-block-contact-us.twig" with {
            "title" : contact_list_title,
            "department" : department,
            "telephone" : telephone,
            "email" : email
        } %}
    </div>
    {% endblock%}
{% endblock %}

{% block bottom_section %}
    {% include "@molecules/02-blocks/07-give-block-full-width.twig" %}
{% endblock %}

